<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterfazActivity"
    android:background="@color/Inicio">

    <RelativeLayout
        android:layout_width="399dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_degradado"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:src="@drawable/Logo">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/GrandHotel"
                android:gravity="center"
                android:textColor="@color/Letra"
                android:text="!Porque tener una vida organizada \nes el manejo de tu \ndía a día¡"
                android:textSize="50sp">
            </TextView>

            <Button
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/GlacialIndifference"
                android:textColor="#FFFFFF"
                android:background="@color/Letra"
                android:layout_gravity="center_horizontal"
                android:text="Siguiente">
            </Button>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>